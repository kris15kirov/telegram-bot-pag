{
  "name": "telegram-business-assistant",
  "version": "1.0.0",
  "description": "Telegram Business Chat Assistant Bot for handling FAQ, filtering requests, and auto-forwarding important messages",
  "main": "src/bot.js",
  "scripts": {
    "start": "node src/bot.js",
    "dev": "nodemon src/bot.js",
    "webhook": "node src/webhook.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "telegram",
    "bot",
    "business",
    "assistant",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "jest": "^29.7.0",
    "natural": "^8.1.0",
    "node-cache": "^5.1.2",
    "node-telegram-bot-api": "^0.64.0",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/bot.js",
      "!src/webhook.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  }
}