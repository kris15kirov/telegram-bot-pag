{
  "name": "web3-telegram-bot",
  "version": "1.0.0",
  "description": "Production-ready Web3 Telegram Business Assistant Bot powered by Pashov Audit Group expertise",
  "main": "src/bot-web3.js",
  "scripts": {
    "start": "node src/bot-web3.js",
    "dev": "nodemon src/bot-web3.js",
    "webhook": "node src/webhook.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "telegram",
    "bot",
    "web3",
    "defi",
    "crypto",
    "blockchain",
    "security",
    "audit",
    "pashov"
  ],
  "author": "Pashov Audit Group",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "natural": "^8.1.0",
    "node-cache": "^5.1.2",
    "node-telegram-bot-api": "^0.64.0",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "eslint": "^8.55.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/bot-web3.js",
      "!src/webhook.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kris15kirov/telegram-bot-pag.git"
  },
  "bugs": {
    "url": "https://github.com/kris15kirov/telegram-bot-pag/issues"
  },
  "homepage": "https://github.com/kris15kirov/telegram-bot-pag#readme"
}